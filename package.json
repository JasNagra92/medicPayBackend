{
  "name": "medicpaybackend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "npm run tsc",
    "tsc": "./node_modules/typescript/bin/tsc",
    "start": "node ./dist/server.js",
    "test": "cross-env NODE_ENV='development' jest --runInBand --detectOpenHandles",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q ./dist/server.js\"",
    "kill": "npx kill-port 4000 8080 8000 8085 4500 4400 4401 4501"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "./**/*.ts",
      "!**/node_modules/**"
    ]
  },
  "keywords": [],
  "author": "",
  "engines": {
    "node": "18.18.0",
    "npm": "10.2.5"
  },
  "license": "ISC",
